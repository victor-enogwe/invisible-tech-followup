{
	"compileOnSave": true,
	"compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
	},
	"exclude": [
    "node_modules",
    "dist",
    "vendor",
    "coverage"
	]
}
